cabal-version:       2.2

name:                crucible-symio
version:             0.1.0.0
license-file:        LICENSE
author:              Daniel Matichuk
maintainer:          dmatichuk@galois.com
build-type:          Simple
extra-source-files:  CHANGELOG.md

common shared
  build-depends:       base >=4.12 && <4.15,
                       ansi-wl-pprint,
                       bv-sized,
                       crucible,
                       containers,
                       IntervalMap,
                       lens,
                       mtl,
                       parameterized-utils,
                       transformers,
                       vector,
                       text,
                       what4       
                     
library
  import: shared
  exposed-modules:
      Lang.Crucible.SymIO
      Lang.Crucible.SymIO.Types
      What4.CachedArray
      Data.Parameterized.IntervalsMap
  hs-source-dirs:      src
  default-language:    Haskell2010

test-suite crucible-symio-tests
  import: shared
  type: exitcode-stdio-1.0
  main-is: TestMain.hs
  hs-source-dirs: tests
  build-depends: base >=4.12 && <4.15,
                 what4,
                 crucible,
                 crucible-symio,
                 parameterized-utils,
                 tasty < 1.3.1,
                 tasty-hunit,
                 tasty-expected-failure >= 0.12


