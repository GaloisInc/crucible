// see https://www.typescriptlang.org/docs/handbook/project-references.html
{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "module": "CommonJS",
        "paths": {
            "@client/*": [
                "client/src/*"
            ],
            "@server/*": [
                "server/src/*"
            ],
            "@shared/*": [
                "shared/src/*"
            ],
            "@webview/*": [
                "webview/src/*"
            ]
        },
        "plugins": [
            {
                "name": "typescript-plugin-css-modules",
            }
        ],
        "rootDirs": [
            "client/src",
            "server/src",
            "shared/src",
            "webview/src"
        ]
    },
    "files": [
        "webpack.config.ts"
    ],
    "include": [],
    "references": [
        {
            "path": "./client"
        },
        {
            "path": "./server"
        },
        {
            "path": "./shared"
        },
        {
            "path": "./webview"
        }
    ]
}
