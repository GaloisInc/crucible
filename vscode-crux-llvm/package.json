{
    "activationEvents": [
        "onView:vscode-crux-llvm-2",
        "onCommand:vscode-crux-llvm.helloWorld",
        "onDebug",
        "onLanguage:c"
    ],
    "author": "Valentin Robert",
    "contributes": {
        "commands": [],
        "configuration": {
            "properties": {
                "vscode-crux-llvm.clang": {
                    "default": "clang",
                    "description": "Absolute path to the clang executable to use",
                    "type": "string"
                },
                "vscode-crux-llvm.crux-llvm": {
                    "default": "crux-llvm",
                    "description": "Absolute path to the crux-llvm executable to use",
                    "type": "string"
                },
                "vscode-crux-llvm.debug": {
                    "default": false,
                    "description": "Set to true to get information about the status of the extension (in the VSCode console)",
                    "type": "boolean"
                },
                "vscode-crux-llvm.include-dirs": {
                    "default": [],
                    "description": "Include directories passed to crux-llvm as --include-dirs",
                    "items": {
                        "type": "string"
                    },
                    "type": "array"
                },
                "vscode-crux-llvm.llvm-link": {
                    "default": "link-llvm",
                    "description": "Absolute path to the llvm-link executable to use",
                    "type": "string"
                },
                "vscode-crux-llvm.path": {
                    "default": "",
                    "description": "Value for PATH (z3 must be installed either globally or somewhere in PATH)",
                    "type": "string"
                }
            },
            "title": "Crux LLVM configuration"
        },
        "views": {
            "vscode-crux-llvm-panel": [
                {
                    "contextualTitle": "Where does this appear?",
                    "icon": "$(pass)",
                    "id": "vscode-crux-llvm-panel-view",
                    "name": "VSCode Crux-LLVM",
                    "type": "webview"
                }
            ]
        },
        "viewsContainers": {
            "panel": [
                {
                    "icon": "$(pass)",
                    "id": "vscode-crux-llvm-panel",
                    "title": "Crux-LLVM diagnostics"
                }
            ]
        }
    },
    "dependencies": {
        "css-loader": "^6.3.0",
        "style-loader": "^3.3.0"
    },
    "description": "VSCode extension for the Crux-LLVM tool",
    "devDependencies": {
        "@types/mocha": "^9.0.0",
        "@types/node": "^16.10.1",
        "@types/webpack": "^5.28.0",
        "@types/ws": "^8.2.0",
        "@typescript-eslint/eslint-plugin": "^4.32.0",
        "@typescript-eslint/parser": "^4.32.0",
        "copy-webpack-plugin": "^9.0.1",
        "eslint": "^7.32.0",
        "eslint-import-resolver-typescript": "^2.5.0",
        "eslint-plugin-import": "^2.24.2",
        "eslint-plugin-tsdoc": "^0.2.14",
        "mocha": "^9.1.2",
        "npm-check-updates": "^11.8.5",
        "ts-loader": "^9.2.6",
        "ts-node": "^10.2.1",
        "tsconfig-paths-webpack-plugin": "^3.5.1",
        "typescript": "^4.4.3",
        "typescript-plugin-css-modules": "^3.4.0",
        "vsce": "^1.100.1",
        "webpack": "^5.55.0",
        "webpack-cli": "^4.8.0",
        "webpack-typings-for-css": "^0.7.0"
    },
    "displayName": "VSCode Crux-LLVM",
    "engines": {
        "npm": ">=7",
        "vscode": "^1.58.0"
    },
    "license": "BSD-3-Clause",
    "main": "./dist/client.bundle.js",
    "name": "vscode-crux-llvm",
    "publisher": "galois",
    "repository": {
        "type": "git",
        "url": "https://github.com/GaloisInc/crucible"
    },
    "scripts": {
        "compile": "webpack",
        "lint": "eslint .",
        "test-compile": "tsc -p ./",
        "upgrade": "ncu -u; npm exec --workspaces -- ncu --target minor -u",
        "vscode:prepublish": "webpack --mode production",
        "watch": "webpack watch"
    },
    "version": "0.0.2",
    "workspaces": [
        "client",
        "server",
        "shared",
        "webview"
    ]
}
