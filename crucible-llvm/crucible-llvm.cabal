  build-depends:
    base >= 4.13 && < 4.21,
    attoparsec,
    bv-sized >= 1.0.0,
    bytestring,
    containers >= 0.5.8.0,
    crucible >= 0.5,
    crucible-symio,
    what4 >= 0.5,
    extra,
    lens,
    itanium-abi >= 0.1.1.1 && < 0.2,
    llvm-pretty >= 0.12.1 && < 0.14,
    mtl,
    parameterized-utils >= 2.1.5 && < 2.2,
    pretty,
    prettyprinter >= 1.7.0,
    text,
    template-haskell,
    transformers,
    utf8-string,
    vector

