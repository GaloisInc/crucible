test-suite crucible-llvm-tests
  import: bldflags
  import: warns
  type: exitcode-stdio-1.0
  main-is: Tests.hs
  hs-source-dirs: test
  other-modules: MemSetup
               , TestFunctions
               , TestGlobals
               , TestMemory
               , TestTranslation
  build-depends:
    base,
    bv-sized,
    containers,
    crucible,
    crucible-llvm,
    directory,
    filepath,
    lens,
    llvm-pretty,
    llvm-pretty-bc-parser,
    lens,
    parameterized-utils,
    process,
    what4,
    tasty,
    tasty-quickcheck,
    tasty-hunit,
    tasty-sugar >= 2.0 && < 2.3,
    vector
